    <div class="bookmark-notification" id="bookmarkNotification" role="alert" aria-live="polite">
        –¢–µ—Ä–º–∏–Ω –¥–æ–±–∞–≤–ª–µ–Ω –≤ —à–ø–∞—Ä–≥–∞–ª–∫—É!
    </div>

    <script>
        // üîê –ó–ê–©–ò–¢–ê: –í–µ—Å—å –∫–æ–¥ –æ–±–µ—Ä–Ω—É—Ç –≤ IIFE —Å strict mode
        (function() {
            'use strict';
            
            // üîê –ó–ê–©–ò–¢–ê: –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–¥–¥–µ—Ä–∂–∫–∏ API
            if (!('localStorage' in window)) {
                console.error('localStorage –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è');
                return;
            }
            
            // üîê –ó–ê–©–ò–¢–ê: –°–∏—Å—Ç–µ–º–∞ —Å–∞–Ω–∞—Ü–∏–∏ –¥–∞–Ω–Ω—ã—Ö
            const Security = {
                // –≠–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ HTML
                escapeHTML: function(text) {
                    if (typeof text !== 'string') return '';
                    const div = document.createElement('div');
                    div.textContent = text;
                    return div.innerHTML;
                },
                
                // –≠–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ –∞—Ç—Ä–∏–±—É—Ç–æ–≤
                escapeAttribute: function(value) {
                    return String(value).replace(/[&<>"']/g, function(m) {
                        return {
                            '&': '&amp;',
                            '<': '&lt;',
                            '>': '&gt;',
                            '"': '&quot;',
                            "'": '&#39;'
                        }[m];
                    });
                },
                
                // –í–∞–ª–∏–¥–∞—Ü–∏—è —Ç–µ—Ä–º–∏–Ω–æ–≤
                isValidTerm: function(term) {
                    const allowedTerms = [
                        'USDT (–¢–µ–∑–µ—Ä)', 'TON (Toncoin)', '–ú–µ–π–∫–µ—Ä (Maker)', '–¢–µ–π–∫–µ—Ä (Taker)',
                        '–û—Ä–¥–µ—Ä (–û–±—ä—è–≤–ª–µ–Ω–∏–µ, –ó–∞—è–≤–∫–∞)', 'P2P –∫—Ä—É–≥ (–ê—Ä–±–∏—Ç—Ä–∞–∂–Ω—ã–π –∫—Ä—É–≥)',
                        '–°–ø—Ä–µ–¥ (–î–æ—Ö–æ–¥–Ω–æ—Å—Ç—å)', '–°—Ç–∞–∫–∞–Ω (–ö–Ω–∏–≥–∞ –æ—Ä–¥–µ—Ä–æ–≤)', '–§–∏–∞—Ç (Fiat)',
                        '–ü–ª–∞—Ç–µ–∂–∫–∞ (–ü–ª–∞—Ç–µ–∂–Ω—ã–π –º–µ—Ç–æ–¥)', '–≠—Å–∫—Ä–æ—É (–ì–∞—Ä–∞–Ω—Ç —Å–¥–µ–ª–∫–∏)',
                        '–ê–ø–µ–ª–ª—è—Ü–∏—è (–°–ø–æ—Ä)', '115-–§–ó', '–§—Ä–æ–¥ (–ú–æ—à–µ–Ω–Ω–∏—á–µ—Å—Ç–≤–æ)',
                        '–ú–Ω–æ–≥–æ–∑–∞–¥–∞—á–Ω–æ—Å—Ç—å', '–õ–∏–∫–≤–∏–¥–Ω–æ—Å—Ç—å', '–û–±–æ—Ä–æ—Ç', '–î—Ä–æ–ø (–î—Ä–æ–ø-–∫–∞—Ä—Ç–∞, –î—Ä–æ–ø-—Å—á—ë—Ç)'
                    ];
                    return allowedTerms.includes(term);
                },
                
                // –ë–µ–∑–æ–ø–∞—Å–Ω–æ–µ —Å–æ–∑–¥–∞–Ω–∏–µ —ç–ª–µ–º–µ–Ω—Ç–∞
                createElement: function(tag, attributes = {}, text = '') {
                    const element = document.createElement(tag);
                    
                    for (const [key, value] of Object.entries(attributes)) {
                        element.setAttribute(key, Security.escapeAttribute(value));
                    }
                    
                    if (text) {
                        element.textContent = text;
                    }
                    
                    return element;
                }
            };
            
            // üîê –ó–ê–©–ò–¢–ê: –ë–µ–∑–æ–ø–∞—Å–Ω—ã–π localStorage
            const Storage = {
                get: function(key) {
                    try {
                        const data = localStorage.getItem(key);
                        return data ? JSON.parse(data) : null;
                    } catch (error) {
                        console.error('–û—à–∏–±–∫–∞ —á—Ç–µ–Ω–∏—è –∏–∑ localStorage:', error);
                        return null;
                    }
                },
                
                set: function(key, value) {
                    try {
                        localStorage.setItem(key, JSON.stringify(value));
                        return true;
                    } catch (error) {
                        console.error('–û—à–∏–±–∫–∞ –∑–∞–ø–∏—Å–∏ –≤ localStorage:', error);
                        return false;
                    }
                },
                
                remove: function(key) {
                    try {
                        localStorage.removeItem(key);
                        return true;
                    } catch (error) {
                        console.error('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –∏–∑ localStorage:', error);
                        return false;
                    }
                }
            };
            
            document.addEventListener('DOMContentLoaded', function() {
                // üîê –ó–ê–©–ò–¢–ê: –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ä–µ—Å—É—Ä—Å–æ–≤
                const checkResources = function() {
                    const styles = document.styleSheets;
                    let allLoaded = true;
                    
                    for (let i = 0; i < styles.length; i++) {
                        try {
                            const rules = styles[i].cssRules;
                        } catch (e) {
                            console.warn('–°—Ç–∏–ª–∏ –Ω–µ –∑–∞–≥—Ä—É–∂–µ–Ω—ã:', styles[i].href);
                            allLoaded = false;
                        }
                    }
                    
                    return allLoaded;
                };
                
                if (!checkResources()) {
                    console.warn('–ù–µ –≤—Å–µ —Ä–µ—Å—É—Ä—Å—ã –∑–∞–≥—Ä—É–∂–µ–Ω—ã');
                }
                
                // üîê –ó–ê–©–ò–¢–ê: –ë–µ–∑–æ–ø–∞—Å–Ω–∞—è –Ω–∞–≤–∏–≥–∞—Ü–∏—è
                const Navigation = {
                    sections: ['basics', 'deal', 'tech', 'advanced', 'summary'],
                    
                    validateHash: function(hash) {
                        return this.sections.includes(hash.replace('#', ''));
                    },
                    
                    scrollToSection: function(sectionId) {
                        if (!this.validateHash('#' + sectionId)) {
                            console.warn('–ü–æ–ø—ã—Ç–∫–∞ –ø–µ—Ä–µ—Ö–æ–¥–∞ –∫ –Ω–µ–¥–æ–ø—É—Å—Ç–∏–º–æ–º—É —Ä–∞–∑–¥–µ–ª—É:', sectionId);
                            return;
                        }
                        
                        const element = document.getElementById(sectionId);
                        if (element) {
                            window.scrollTo({
                                top: element.offsetTop - 100,
                                behavior: 'smooth'
                            });
                        }
                    }
                };
                
                // –ú–æ–±–∏–ª—å–Ω–∞—è –Ω–∞–≤–∏–≥–∞—Ü–∏—è
                const mobileNavItems = document.querySelectorAll('.mobile-nav-item');
                const sections = document.querySelectorAll('.section, .summary-section');
                
                function updateMobileNav() {
                    let current = '';
                    
                    sections.forEach(section => {
                        const sectionTop = section.offsetTop;
                        const sectionHeight = section.clientHeight;
                        
                        if (window.scrollY >= (sectionTop - 150)) {
                            current = section.getAttribute('id');
                        }
                    });
                    
                    mobileNavItems.forEach(item => {
                        item.classList.remove('active');
                        const href = item.getAttribute('href');
                        if (href && href === `#${current}`) {
                            item.classList.add('active');
                        }
                    });
                }
                
                window.addEventListener('scroll', updateMobileNav);
                
                // –ü–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö —Å—Å—ã–ª–æ–∫
                mobileNavItems.forEach(item => {
                    item.addEventListener('click', function(e) {
                        e.preventDefault();
                        
                        const targetId = this.getAttribute('href');
                        if (!Navigation.validateHash(targetId)) {
                            console.warn('–ù–µ–¥–æ–ø—É—Å—Ç–∏–º—ã–π hash:', targetId);
                            return;
                        }
                        
                        const targetElement = document.querySelector(targetId);
                        
                        if (targetElement) {
                            mobileNavItems.forEach(navItem => {
                                navItem.classList.remove('active');
                            });
                            
                            this.classList.add('active');
                            
                            Navigation.scrollToSection(targetId.replace('#', ''));
                        }
                    });
                });
                
                // üîê –ó–ê–©–ò–¢–ê: –°–∏—Å—Ç–µ–º–∞ –∑–∞–∫–ª–∞–¥–æ–∫
                const Bookmarks = {
                    storageKey: 'p2p_bookmarks_v2',
                    
                    load: function() {
                        const data = Storage.get(this.storageKey);
                        if (!data || !Array.isArray(data)) return [];
                        
                        // –§–∏–ª—å—Ç—Ä—É–µ–º –Ω–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
                        return data.filter(item => 
                            item && 
                            typeof item === 'object' &&
                            Security.isValidTerm(item.term) &&
                            typeof item.time === 'string'
                        );
                    },
                    
                    save: function(bookmarks) {
                        return Storage.set(this.storageKey, bookmarks);
                    },
                    
                    add: function(term) {
                        if (!Security.isValidTerm(term)) {
                            console.warn('–ü–æ–ø—ã—Ç–∫–∞ –¥–æ–±–∞–≤–∏—Ç—å –Ω–µ–¥–æ–ø—É—Å—Ç–∏–º—ã–π —Ç–µ—Ä–º–∏–Ω:', term);
                            return false;
                        }
                        
                        const bookmarks = this.load();
                        const existingIndex = bookmarks.findIndex(b => b.term === term);
                        
                        if (existingIndex !== -1) {
                            bookmarks.splice(existingIndex, 1);
                            this.save(bookmarks);
                            return false;
                        }
                        
                        const now = new Date();
                        const timeString = now.toLocaleDateString('ru-RU') + ' ' + 
                                         now.toLocaleTimeString('ru-RU', {
                                             hour: '2-digit',
                                             minute: '2-digit'
                                         });
                        
                        bookmarks.push({
                            term: term,
                            time: timeString
                        });
                        
                        return this.save(bookmarks);
                    },
                    
                    remove: function(index) {
                        const bookmarks = this.load();
                        if (index >= 0 && index < bookmarks.length) {
                            bookmarks.splice(index, 1);
                            return this.save(bookmarks);
                        }
                        return false;
                    }
                };
                
                // –§—É–Ω–∫—Ü–∏–æ–Ω–∞–ª –∑–∞–∫–ª–∞–¥–æ–∫
                const bookmarkButtons = document.querySelectorAll('.bookmark-btn');
                const bookmarksPanel = document.getElementById('bookmarksPanel');
                const toggleBookmarksBtn = document.getElementById('toggleBookmarks');
                const closeBookmarksBtn = document.getElementById('closeBookmarks');
                const bookmarksList = document.getElementById('bookmarksList');
                const bookmarkNotification = document.getElementById('bookmarkNotification');
                const downloadBookmarksBtn = document.getElementById('downloadBookmarks');
                const overlay = document.getElementById('overlay');
                
                let bookmarks = Bookmarks.load();
                
                // üîê –ó–ê–©–ò–¢–ê: –ë–µ–∑–æ–ø–∞—Å–Ω–æ–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å–ø–∏—Å–∫–∞
                function updateBookmarksList() {
                    bookmarksList.innerHTML = '';
                    
                    if (bookmarks.length === 0) {
                        const emptyMessage = Security.createElement('p', {
                            'class': 'bookmark-item'
                        }, '–ù–∞–∂–º–∏ –Ω–∞ –∏–∫–æ–Ω–∫—É –∑–∞–∫–ª–∞–¥–∫–∏ –≤ –∫–∞—Ä—Ç–æ—á–∫–µ —Ç–µ—Ä–º–∏–Ω–∞, —á—Ç–æ–±—ã –¥–æ–±–∞–≤–∏—Ç—å –µ–≥–æ —Å—é–¥–∞');
                        bookmarksList.appendChild(emptyMessage);
                        return;
                    }
                    
                    bookmarks.forEach((bookmark, index) => {
                        const bookmarkItem = Security.createElement('div', {
                            'class': 'bookmark-item'
                        });
                        
                        const termSpan = Security.createElement('span', {}, bookmark.term);
                        termSpan.style.fontWeight = 'bold';
                        
                        const removeBtn = Security.createElement('button', {
                            'class': 'remove-bookmark',
                            'data-index': index,
                            'aria-label': '–£–¥–∞–ª–∏—Ç—å –∑–∞–∫–ª–∞–¥–∫—É'
                        });
                        
                        const icon = Security.createElement('i', {
                            'class': 'fas fa-times'
                        });
                        removeBtn.appendChild(icon);
                        
                        const timeDiv = Security.createElement('div', {}, bookmark.time);
                        timeDiv.style.cssText = 'font-size: 0.8rem; margin-top: 5px; color: var(--text-light);';
                        
                        bookmarkItem.appendChild(termSpan);
                        bookmarkItem.appendChild(removeBtn);
                        bookmarkItem.appendChild(timeDiv);
                        
                        bookmarksList.appendChild(bookmarkItem);
                    });
                    
                    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –∫–Ω–æ–ø–æ–∫ —É–¥–∞–ª–µ–Ω–∏—è
                    document.querySelectorAll('.remove-bookmark').forEach(button => {
                        button.addEventListener('click', function() {
                            const index = parseInt(this.getAttribute('data-index'));
                            if (!isNaN(index)) {
                                removeBookmark(index);
                            }
                        });
                    });
                }
                
                // üîê –ó–ê–©–ò–¢–ê: –ë–µ–∑–æ–ø–∞—Å–Ω–æ–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
                function showNotification(message, isError = false) {
                    if (!bookmarkNotification) return;
                    
                    bookmarkNotification.textContent = Security.escapeHTML(message);
                    bookmarkNotification.style.backgroundColor = isError ? '#d73a49' : '#2ea043';
                    bookmarkNotification.classList.add('show');
                    
                    setTimeout(() => {
                        bookmarkNotification.classList.remove('show');
                    }, 2000);
                }
                
                function addBookmark(term) {
                    if (Bookmarks.add(term)) {
                        bookmarks = Bookmarks.load();
                        updateBookmarksList();
                        
                        const button = document.querySelector(`.bookmark-btn[data-term="${Security.escapeAttribute(term)}"]`);
                        if (button) {
                            const icon = button.querySelector('i');
                            if (icon) {
                                icon.classList.remove('far', 'fa-bookmark');
                                icon.classList.add('fas', 'fa-bookmark');
                                button.classList.add('active');
                            }
                        }
                        
                        showNotification(`"${term}" –¥–æ–±–∞–≤–ª–µ–Ω –≤ —à–ø–∞—Ä–≥–∞–ª–∫—É!`);
                        return true;
                    } else {
                        bookmarks = Bookmarks.load();
                        updateBookmarksList();
                        
                        const button = document.querySelector(`.bookmark-btn[data-term="${Security.escapeAttribute(term)}"]`);
                        if (button) {
                            const icon = button.querySelector('i');
                            if (icon) {
                                icon.classList.remove('fas', 'fa-bookmark');
                                icon.classList.add('far', 'fa-bookmark');
                                button.classList.remove('active');
                            }
                        }
                        
                        return false;
                    }
                }
                
                function removeBookmark(index) {
                    if (Bookmarks.remove(index)) {
                        bookmarks = Bookmarks.load();
                        updateBookmarksList();
                        showNotification('–ó–∞–∫–ª–∞–¥–∫–∞ —É–¥–∞–ª–µ–Ω–∞');
                    }
                }
                
                // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –∫–Ω–æ–ø–æ–∫ –∑–∞–∫–ª–∞–¥–æ–∫
                bookmarkButtons.forEach(button => {
                    button.addEventListener('click', function(e) {
                        e.stopPropagation();
                        const term = this.getAttribute('data-term');
                        if (term) {
                            addBookmark(term);
                        }
                    });
                    
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ —É–∂–µ —ç—Ç–æ—Ç —Ç–µ—Ä–º–∏–Ω –≤ –∑–∞–∫–ª–∞–¥–∫–∞—Ö
                    const term = button.getAttribute('data-term');
                    if (term && bookmarks.find(b => b.term === term)) {
                        const icon = button.querySelector('i');
                        if (icon) {
                            icon.classList.remove('far', 'fa-bookmark');
                            icon.classList.add('fas', 'fa-bookmark');
                            button.classList.add('active');
                        }
                    }
                });
                
                // üîê –ó–ê–©–ò–¢–ê: –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –ø–∞–Ω–µ–ª—å—é
                function openBookmarksPanel() {
                    bookmarksPanel.classList.add('show');
                    bookmarksPanel.setAttribute('aria-hidden', 'false');
                    overlay.classList.add('show');
                    toggleBookmarksBtn.setAttribute('aria-expanded', 'true');
                    document.body.style.overflow = 'hidden';
                }
                
                function closeBookmarksPanel() {
                    bookmarksPanel.classList.remove('show');
                    bookmarksPanel.setAttribute('aria-hidden', 'true');
                    overlay.classList.remove('show');
                    toggleBookmarksBtn.setAttribute('aria-expanded', 'false');
                    document.body.style.overflow = 'auto';
                }
                
                toggleBookmarksBtn.addEventListener('click', openBookmarksPanel);
                closeBookmarksBtn.addEventListener('click', closeBookmarksPanel);
                overlay.addEventListener('click', closeBookmarksPanel);
                
                // üîê –ó–ê–©–ò–¢–ê: –ë–µ–∑–æ–ø–∞—Å–Ω—ã–π —Å–≤–∞–π–ø
                let startY = 0;
                let currentY = 0;
                
                bookmarksPanel.addEventListener('touchstart', function(e) {
                    startY = e.touches[0].clientY;
                });
                
                bookmarksPanel.addEventListener('touchmove', function(e) {
                    currentY = e.touches[0].clientY;
                    const diff = currentY - startY;
                    
                    if (diff > 20) {
                        this.style.transform = `translateY(${diff}px)`;
                    }
                });
                
                bookmarksPanel.addEventListener('touchend', function() {
                    const diff = currentY - startY;
                    
                    if (diff > 100) {
                        closeBookmarksPanel();
                    } else {
                        this.style.transform = 'translateY(0)';
                    }
                    
                    startY = 0;
                    currentY = 0;
                });
                
                // üîê –ó–ê–©–ò–¢–ê: –ë–µ–∑–æ–ø–∞—Å–Ω–æ–µ —Å–∫–∞—á–∏–≤–∞–Ω–∏–µ
                downloadBookmarksBtn.addEventListener('click', function() {
                    if (bookmarks.length === 0) {
                        showNotification('–í —à–ø–∞—Ä–≥–∞–ª–∫–µ –ø–æ–∫–∞ –Ω–µ—Ç —Ç–µ—Ä–º–∏–Ω–æ–≤', true);
                        return;
                    }
                    
                    try {
                        let text = '–ú–æ—è —à–ø–∞—Ä–≥–∞–ª–∫–∞ –ø–æ —Ç–µ—Ä–º–∏–Ω–∞–º P2P-—Ç–æ—Ä–≥–æ–≤–ª–∏\n\n';
                        text += '–°–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã–µ —Ç–µ—Ä–º–∏–Ω—ã:\n\n';
                        
                        bookmarks.forEach((bookmark, index) => {
                            text += `${index + 1}. ${Security.escapeHTML(bookmark.term)}\n`;
                            text += `   –î–æ–±–∞–≤–ª–µ–Ω–æ: ${Security.escapeHTML(bookmark.time)}\n\n`;
                        });
                        
                        text += '\n---\n';
                        text += '–°–æ–∑–¥–∞–Ω–æ —Å –ø–æ–º–æ—â—å—é –æ–±—Ä–∞–∑–æ–≤–∞—Ç–µ–ª—å–Ω–æ–≥–æ –º–æ–¥—É–ª—è –ø–æ P2P-—Ç–æ—Ä–≥–æ–≤–ª–µ';
                        text += '\n–í–µ—Ä—Å–∏—è: 2.0 (–±–µ–∑–æ–ø–∞—Å–Ω–∞—è)';
                        text += '\n–î–∞—Ç–∞ —ç–∫—Å–ø–æ—Ä—Ç–∞: ' + new Date().toLocaleString('ru-RU');
                        
                        const blob = new Blob([text], { 
                            type: 'text/plain;charset=utf-8' 
                        });
                        const url = URL.createObjectURL(blob);
                        
                        const a = Security.createElement('a', {
                            'href': url,
                            'download': '–º–æ—è_—à–ø–∞—Ä–≥–∞–ª–∫–∞_p2p_—Ç–µ—Ä–º–∏–Ω—ã.txt'
                        });
                        a.style.display = 'none';
                        
                        document.body.appendChild(a);
                        a.click();
                        
                        setTimeout(() => {
                            document.body.removeChild(a);
                            URL.revokeObjectURL(url);
                        }, 100);
                        
                        showNotification('–®–ø–∞—Ä–≥–∞–ª–∫–∞ —Å–∫–∞—á–∏–≤–∞–µ—Ç—Å—è');
                    } catch (error) {
                        console.error('–û—à–∏–±–∫–∞ —Å–∫–∞—á–∏–≤–∞–Ω–∏—è:', error);
                        showNotification('–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–∫–∞—á–∏–≤–∞–Ω–∏–∏', true);
                    }
                });
                
                // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Å–ø–∏—Å–∫–∞ –∑–∞–∫–ª–∞–¥–æ–∫
                updateBookmarksList();
                
                // üîê –ó–ê–©–ò–¢–ê: –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–∞—Ä—Ç–æ—á–µ–∫
                const termCards = document.querySelectorAll('.term-card');
                termCards.forEach(card => {
                    card.addEventListener('click', function(e) {
                        if (!e.target.closest('.bookmark-btn')) {
                            this.classList.add('active');
                            setTimeout(() => {
                                this.classList.remove('active');
                            }, 200);
                        }
                    });
                });
                
                // üîê –ó–ê–©–ò–¢–ê: –ü—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–µ–Ω–∏–µ –º–∞—Å—à—Ç–∞–±–∏—Ä–æ–≤–∞–Ω–∏—è
                let lastTouchEnd = 0;
                document.addEventListener('touchend', function(event) {
                    const now = (new Date()).getTime();
                    if (now - lastTouchEnd <= 300) {
                        event.preventDefault();
                    }
                    lastTouchEnd = now;
                }, false);
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∞–∫—Ç–∏–≤–Ω–æ–≥–æ —Ä–∞–∑–¥–µ–ª–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
                updateMobileNav();
                
                // üîê –ó–ê–©–ò–¢–ê: –û—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –∑–∞–∫—Ä—ã—Ç–∏–∏
                window.addEventListener('beforeunload', function() {
                    const panels = document.querySelectorAll('.bookmarks-panel.show, .overlay.show');
                    panels.forEach(panel => {
                        panel.classList.remove('show');
                    });
                });
            });
        })();
    </script>
</body>
</html>
```

–≠—Ç–æ –ø–æ–ª–Ω—ã–π –∫–æ–¥ HTML-—Ñ–∞–π–ª–∞ "–º–æ–¥—É–ª—å 2.html", –∫–æ—Ç–æ—Ä—ã–π –ø—Ä–µ–¥—Å—Ç–∞–≤–ª—è–µ—Ç —Å–æ–±–æ–π –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ–µ –æ–±—Ä–∞–∑–æ–≤–∞—Ç–µ–ª—å–Ω–æ–µ –ø–æ—Å–æ–±–∏–µ –ø–æ —Ç–µ—Ä–º–∏–Ω–∞–º P2P-—Ç–æ—Ä–≥–æ–≤–ª–∏ —Å —Ñ—É–Ω–∫—Ü–∏—è–º–∏ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏, –∞–¥–∞–ø—Ç–∏–≤–Ω—ã–º –¥–∏–∑–∞–π–Ω–æ–º –∏ —Å–∏—Å—Ç–µ–º–æ–π –∑–∞–∫–ª–∞–¥–æ–∫.